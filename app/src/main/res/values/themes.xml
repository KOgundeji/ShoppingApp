<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingListApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_orange</item>
        <item name="colorPrimaryVariant">@color/orange_tint_dark</item>
        <item name="colorOnPrimary">@color/orange_tint_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_yellow</item>
        <item name="colorSecondaryVariant">@color/yellow_tint</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/base_orange</item>
        <item name="postSplashScreenTheme">@style/Theme.ShoppingListApp</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="android:windowSplashscreenContent">@mipmap/splash_logo</item>
    </style>

    <style name="Theme.ShoppingListApp.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_orange</item>
        <item name="colorPrimaryVariant">@color/orange_tint_dark</item>
        <item name="colorOnPrimary">@color/orange_tint_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_yellow</item>
        <item name="colorSecondaryVariant">@color/yellow_tint</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Checkbox" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/checkbox_checked</item>
        <item name="colorControlActivated">@color/checkbox_resting</item>
    </style>

</resources>